<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>loginPage</param-name>
        <param-value>login.html</param-value>
    </context-param>
    <context-param>
        <param-name>invalidPage</param-name>
        <param-value>invalid.html</param-value>
    </context-param>
    <context-param>
        <param-name>searchPage</param-name>
        <param-value>search.html</param-value>
    </context-param>
    <context-param>
        <param-name>orderListPage</param-name>
        <param-value>orderList.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>orderDetailPage</param-name>
        <param-value>orderDetail.jsp</param-value>
    </context-param>
    <context-param>
        <param-name>registerPage</param-name>
        <param-value>register.jsp</param-value>
    </context-param>
    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>phatnh.filter.DispatcherFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizeFilter</filter-name>
        <filter-class>phatnh.filter.AuthorizeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>phatnh.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DispatcherFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern></url-pattern>
        <url-pattern>/login.html</url-pattern>
        <url-pattern>/invalid.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthorizeFilter</filter-name>
        <url-pattern>/shoping.jsp</url-pattern>
        <url-pattern>/orderList.jsp</url-pattern>
        <url-pattern>/orderDetail.jsp</url-pattern>
        <url-pattern>/search.html</url-pattern>
        <url-pattern>/SearchOrderServlet</url-pattern>
        <url-pattern>/GetDetailServlet</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>phatnh.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchOrderServlet</servlet-name>
        <servlet-class>phatnh.servlet.SearchOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDetailServlet</servlet-name>
        <servlet-class>phatnh.servlet.GetDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>phatnh.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>phatnh.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchOrderServlet</servlet-name>
        <url-pattern>/SearchOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDetailServlet</servlet-name>
        <url-pattern>/GetDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>Datasource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
